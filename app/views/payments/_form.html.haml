= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payday
    = f.date_select :payday
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :kind
    = f.number_field :kind
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :note
    = f.text_area :note
  .actions
    = f.submit 'Save'
