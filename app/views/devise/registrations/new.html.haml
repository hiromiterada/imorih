= provide :title, t('.title')

%div{style: 'max-width: 440px; padding-bottom: 15px; margin: 0px auto;'}
  %h2.text-center= t('.title')

  .well.bs-component
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      %fieldset
        %legend= User.model_name.human
      .input-group
        %span.input-group-addon
          %i.fa.fa-envelope
        = f.email_field :email, autofocus: true,
          placeholder: User.human_attribute_name(:email), class: 'form-control'
      %span.help-block
      .input-group
        %span.input-group-addon
          %i.fa.fa-key
        = f.password_field :password, autocomplete: 'off', class: 'form-control',
          placeholder: User.human_attribute_name(:password), class: 'form-control'
      %span.help-block
      .input-group
        %span.input-group-addon
          %i.fa.fa-key
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control',
          placeholder: User.human_attribute_name(:password_confirmation), class: 'form-control'
      %span.help-block
        = f.submit t('.submit'), class: 'btn btn-lg btn-primary btn-block'
    = render 'devise/shared/links'
