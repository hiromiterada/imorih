= provide :title, t('.title')

%div{style: 'max-width: 440px; padding-bottom: 15px; margin: 0px auto;'}
  %h2.text-center= t('.title')

  .well.bs-component
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!

      = f.hidden_field :reset_password_token
      .form-group
        = f.label :password, t('.new_password'), class: 'col-lg-2 control-label'
        .col-lg-10
          = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control'
      .form-group
        = f.label :password_confirmation, t('.confirm_new_password'), class: 'col-lg-2 control-label'
        .col-lg-10
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
      %span.help-block
        = f.submit t('.submit'), class: 'btn btn-lg btn-primary btn-block'
    = render 'devise/shared/links'
