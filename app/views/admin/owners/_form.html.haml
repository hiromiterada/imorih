.well.bs-component
  = nested_form_for [:admin, @owner], html: { class: "form-horizontal owner" } do |f|
    %fieldset
      %legend= Owner.model_name.human
    - if @owner.errors.any?
      %p.text-danger= t('errors.messages.not_saved')

    .form-group
      = f.label :name, class: 'control-label col-lg-2'
      %span.text-danger= t('views.required')
      .col-lg-10
        = f.text_field :name, class: 'form-control'
      = f.error_span(:name)
    .form-group
      = f.label :email, class: 'control-label col-lg-2'
      %span.text-danger= t('views.required')
      .col-lg-10
        = f.email_field :email, class: 'form-control'
      = f.error_span(:email)
    .form-group
      = f.label :address, class: 'control-label col-lg-2'
      .col-lg-10
        = f.text_field :address, class: 'form-control'
      = f.error_span(:address)
    .form-group
      = f.label :phone, class: 'control-label col-lg-2'
      .col-lg-10
        = f.text_field :phone
      = f.error_span(:phone)
    .form-group
      = f.label :representative, class: 'control-label col-lg-2'
      .col-lg-10
        = f.text_field :representative
      = f.error_span(:representative)
    .form-group
      = f.label :signature, class: 'control-label col-lg-2'
      .col-lg-10
        = f.text_area :signature, class: 'form-control'
      = f.error_span(:signature)
    = render 'form_owner_user', f: f, users: @users
    .form-group
      .col-lg-offset-2.col-lg-10
      = f.submit t('views.save'), class: 'btn btn-primary'
      = link_to t('views.cancel'), admin_owners_path, class: 'btn btn-default'
