!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      ImoriH - 
      = yield(:title).present? ? yield(:title) : nil
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %ul
      - if user_signed_in?
        %li= link_to current_user.email, edit_user_registration_path
        %li= link_to t('views.signout'), destroy_user_session_path, method: :delete
        - if current_user.admin?
          %li= link_to t('activerecord.models.user'), users_path
          %li= link_to t('activerecord.models.contract'), contracts_path
        %li= link_to t('activerecord.models.payment'), payments_path
      - else
        %li= link_to t('views.signin'), new_user_session_path
        %li= link_to t('views.signup'), new_user_registration_path
    %p#notice= notice
    %p#alert= alert
    = yield
